<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane fx:id="ContenitorePadre" prefHeight="600" prefWidth="800" styleClass="StackPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.HelloController">
    <HBox alignment="CENTER" prefHeight="734.0" prefWidth="1142.0" spacing="20">
        <VBox alignment="TOP_LEFT" prefHeight="600.0" prefWidth="439.0" styleClass="vbox-title" HBox.hgrow="ALWAYS">
            <ImageView fitHeight="351.0" fitWidth="442.0">
                <Image requestedHeight="240" requestedWidth="350" url="@TITLE.png" />
            </ImageView>
            <padding>
                <Insets left="20" />
            </padding>
        </VBox>
        <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="177.0" spacing="20" styleClass="vbox-background" HBox.hgrow="ALWAYS">
            <Label fx:id="welcomeText" alignment="CENTER" styleClass="welcome-text" text="CREA UN ACCOUNT" />
            <TextField fx:id="emailField" prefHeight="25.0" prefWidth="270.0" />
            <PasswordField fx:id="passwordField" />
            <HBox alignment="CENTER_LEFT" prefWidth="250">
                <padding>
                    <Insets left="60" />
                </padding>
                <Label fx:id="warning1" styleClass="warnings-text1" text="Password di almeno 8 caratteri" />
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="250">
                <padding>
                    <Insets left="60" />
                </padding>
                <Label fx:id="warning2" styleClass="warnings-text2" text="Password con almeno 1 carattere speciale e un numero" />
            </HBox>
            <Button fx:id="register" alignment="CENTER" styleClass="button-text" text="Registrati">
                <VBox.margin>
                    <Insets top="50" />
                </VBox.margin>
            </Button>
            <HBox.margin>
                <Insets />
            </HBox.margin>
        </VBox>
        <StackPane.margin>
            <Insets />
        </StackPane.margin>
        <padding>
            <Insets right="100.0" />
        </padding>
    </HBox>
</StackPane>
