<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="ContenitorePadre" prefHeight="980" prefWidth="1720" styleClass="MainPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.Access">
    <HBox prefHeight="250.0" prefWidth="200.0" styleClass="Hbox-Padre" HBox.hgrow="ALWAYS" StackPane.alignment="TOP_LEFT">
        <children>
            <ImageView fx:id="titleImage" fitHeight="194.0" fitWidth="700.0" preserveRatio="true" smooth="false">
                <Image url="@TITLE2.png" />
                <HBox.margin>
                    <Insets left="60.0" top="60.0" />
                </HBox.margin>
            </ImageView>
        </children>
    </HBox>
    <VBox fx:id="loginBox" alignment="CENTER" minHeight="300.0" minWidth="280.0" prefHeight="459.0" prefWidth="433.0" styleClass="vbox-background" StackPane.alignment="CENTER">
        <Label fx:id="welcomeText" alignment="CENTER" styleClass="welcome-text" text="BENVENUTO" />
        <TextField fx:id="emailField" />
        <PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308" />
        <Button fx:id="access" alignment="CENTER" styleClass="button-text" text="Accedi" />
        <Button fx:id="register" alignment="CENTER" styleClass="register-text" text="Non hai un account? Registrati">
            <font>
                <Font size="7.0" />
            </font>
        </Button>
        <Label fx:id="warningText" alignment="CENTER" styleClass="warningText" />
    </VBox>
</StackPane>
