<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Group?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<StackPane  fx:id="AccountContentSetting" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.esa.moviestar.Settings.AccountSettingController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" stylesheets="@../styles/General.css" StackPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Group />
                  <Label text="Nome utente ">
                     <styleClass>
                        <String fx:value="medium-text" />
                        <String fx:value="bold-text" />
                     </styleClass></Label>
                  <Button fx:id="modifyUserButton"  mnemonicParsing="false" text="Modifica utente" />
               </children>
            </HBox>
            <Label text="Modifica password">
               <styleClass>
                  <String fx:value="bold-text" />
                  <String fx:value="large-text" />
               </styleClass></Label>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="medium-text" text="Per cambiare la password, inserisci una nuova password sicura. Ti consigliamo di usare almeno 8 caratteri, con numeri e simboli." wrappingWidth="700.0" />
            <Button  fx:id="modifyPasswordButton" mnemonicParsing="false" text="Cambia password" />
            <Label text="Rimozione dell'account">
               <styleClass>
                  <String fx:value="bold-text" />
                  <String fx:value="large-text" />
               </styleClass></Label>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="medium-text" text="Puoi eliminare definitivamente il tuo account. Questa azione è irreversibile e cancellerà tutte le tue informazioni e preferenze." wrappingWidth="700.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button  fx:id="deleteAccountButton" mnemonicParsing="false" text="Elimina account" />
               </children>
            </HBox>
         </children>
         <StackPane.margin>
            <Insets />
         </StackPane.margin>
         <padding>
            <Insets left="30.0" />
         </padding>
      </VBox>
   </children>
</StackPane>
