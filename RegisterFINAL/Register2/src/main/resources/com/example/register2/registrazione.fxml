<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="ContenitorePadre" prefHeight="600.0" prefWidth="800.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.Register">

    <VBox alignment="TOP_CENTER" spacing="20.0">
        <!-- Immagine in alto -->
        <ImageView fitHeight="107.0" fitWidth="353.0" nodeOrientation="INHERIT">
            <Image url="@TITLE.png" />
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
        </ImageView>

        <!-- VBox Centrale trasparente -->
        <VBox fx:id="mainVBox" alignment="TOP_CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="336.0" spacing="10.0" styleClass="main-vbox">
            <Label fx:id="welcomeText" alignment="CENTER" styleClass="welcome-text" text="REGISTRAZIONE" textOverrun="CLIP">
            <VBox.margin>
               <Insets bottom="40.0" />
            </VBox.margin></Label>
            <TextField fx:id="emailField" maxWidth="1.7976931348623157E308">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin></TextField>
            <PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin></PasswordField>
            <Label fx:id="warning1" maxWidth="1.7976931348623157E308" prefHeight="18.0" styleClass="warnings-text1" text="Password con almeno :" textAlignment="CENTER" />
            <Label maxWidth="1.7976931348623157E308" styleClass="warnings-text2" text="1 carattere speciale o numero" />
            <Label fx:id="warning2" maxWidth="1.7976931348623157E308" prefHeight="13.0" styleClass="warnings-text2" text="8 caratteri">
            <VBox.margin>
               <Insets bottom="20.0" />
            </VBox.margin></Label>
            <Button fx:id="register" alignment="CENTER" maxWidth="200.0" prefHeight="25.0" prefWidth="119.0" styleClass="button-text" text="Registrati" />
            <Button fx:id="backToLogin" alignment="CENTER" styleClass="register-text" text="Hai giÃ  un account? Accedi">
                <VBox.margin>
                    <Insets top="5" />
                </VBox.margin>
                <font>
                    <Font size="7.0" />
                </font>
            </Button>
            <padding>
                <Insets left="60.0" right="60.0" top="10.0" />
            </padding>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="70.0" />
         </VBox.margin>
        </VBox>
    </VBox>

</StackPane>
