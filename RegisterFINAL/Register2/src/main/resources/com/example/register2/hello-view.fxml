<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="ContenitorePadre" prefHeight="600" prefWidth="800" styleClass="MainPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.Access">
    <HBox prefHeight="100.0" prefWidth="200.0" styleClass="Hbox-Padre">
      <children>
          <ImageView fitHeight="252.0" fitWidth="366.0" preserveRatio="true" smooth="false">
              <Image requestedHeight="240" requestedWidth="350" url="@TITLE2.png" />
            <HBox.margin>
               <Insets left="40.0" top="40.0" />
            </HBox.margin>
          </ImageView>
      </children></HBox>
    <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="360.0" spacing="10.0" styleClass="vbox-background" StackPane.alignment="CENTER_RIGHT">
        <Label fx:id="welcomeText" alignment="CENTER" styleClass="welcome-text" text="BENVENUTO">
         <VBox.margin>
            <Insets bottom="40.0" />
         </VBox.margin></Label>
        <TextField fx:id="emailField" maxWidth="1.7976931348623157E308">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></TextField>
        <PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308">
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin></PasswordField>
        <Button fx:id="access" alignment="CENTER" styleClass="button-text" text="Accedi" />
        <Button fx:id="register" alignment="CENTER" styleClass="register-text" text="Non hai un account? Registrati">
            <VBox.margin>
                <Insets top="5" />
            </VBox.margin>
            <font>
                <Font size="7.0" />
            </font>
        </Button>
        <Label fx:id="warningText" alignment="CENTER" styleClass="warningText" />
        <padding>
            <Insets left="60.0" right="60.0" top="10.0" />
        </padding>
    </VBox>
</StackPane>
