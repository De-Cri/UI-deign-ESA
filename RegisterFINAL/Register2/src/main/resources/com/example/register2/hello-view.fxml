<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane fx:id="ContenitorePadre" prefHeight="600" prefWidth="800" styleClass="StackPane" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.Access">
    <HBox prefHeight="100.0" prefWidth="200.0" styleClass="Hbox-Padre" />
    <ImageView fitHeight="100.0" fitWidth="375.0" StackPane.alignment="TOP_LEFT">
        <Image requestedHeight="240" requestedWidth="350" url="@TITLE2.png" />
        <StackPane.margin>
            <Insets left="30.0" top="30.0" />
        </StackPane.margin>
    </ImageView>
    <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" prefHeight="400.0" prefWidth="336.0" spacing="10.0" styleClass="vbox-background" StackPane.alignment="CENTER_RIGHT">
        <Label fx:id="welcomeText" alignment="CENTER" styleClass="welcome-text" text="BENVENUTO" textOverrun="CLIP" />
        <TextField fx:id="emailField" maxWidth="1.7976931348623157E308" />
        <PasswordField fx:id="passwordField" maxWidth="1.7976931348623157E308" />
        <Button fx:id="access" alignment="CENTER" styleClass="button-text" text="Accedi" />
        <Label fx:id="warningText" alignment="CENTER" styleClass="warning-text" text="" textFill="#ff0000" />
        <Button fx:id="register" alignment="CENTER" styleClass="register-text" text="Non hai un account? Registrati">
            <VBox.margin>
                <Insets top="5" />
            </VBox.margin>
            <font>
                <Font size="7.0" />
            </font>
        </Button>
        <padding>
            <Insets left="60.0" right="60.0" top="10.0" />
        </padding>
        <StackPane.margin>
            <Insets right="150.0" />
        </StackPane.margin>
    </VBox>
</StackPane>