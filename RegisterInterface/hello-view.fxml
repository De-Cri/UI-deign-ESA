<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.register2.HelloController" styleClass="StackPane" prefHeight="600" prefWidth="800">
    <!-- VBox centered in StackPane -->
    <VBox alignment="TOP_CENTER" styleClass="vbox-background" maxHeight="400" maxWidth="500" spacing="20">

        <!-- Label at the top of the VBox -->
        <Label text="Inserisci le tue Credenziali" styleClass="welcome-text" />

        <!-- TextField for username -->
        <TextField fx:id="usernameField" promptText="Username" />

        <!-- PasswordField for password -->
        <PasswordField fx:id="passwordField" promptText="Password" />

        <!-- Button to submit -->
        <Button fx:id="access" text="Accedi" alignment="CENTER" styleClass="welcome-text"  />
    </VBox>
</StackPane>
